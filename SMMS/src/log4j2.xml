<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p %C{1} (%F:%L) - %m%n"/>
        </Console>
         </Appenders> 
        <loggers>
              <!--自定义包中类的日志级别-->
              <logger name="com.yc.smms" level="debug"/>
              <!-- 日志级别总开头 -->
	            <Root level="debug">
	                <AppenderRef ref="STDOUT"/>
	            </Root>
        </loggers>
   
</Configuration>